@model FirmaYonetimSistemi.Entities.Departman

@{
    ViewData["Title"] = "Düzenle";
}

<h1>Düzenle</h1>

<h4>Departman</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DepartmanAdi" class="control-label"></label>
                <input asp-for="DepartmanAdi" class="form-control" />
                <span asp-validation-for="DepartmanAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yetki" class="control-label"></label>
                <input asp-for="Yetki" class="form-control" />
                <span asp-validation-for="Yetki" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Bir Önceki Sayfa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
